<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/icon003"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:contentDescription="TODO"
                android:layout_margin="6dip"
                android:src="@drawable/coinmarket"
                app:layout_rowSpan="2"
                app:layout_columnSpan="1"/>

            <TextView
                android:id="@+id/asset003"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toEndOf="@id/icon003"
                android:gravity="center_vertical"
                android:layout_margin="6dip"
                android:text="BTC"
                app:layout_rowSpan="2"
                app:layout_columnSpan="1"
                />

            <TextView
                android:id="@+id/firstLine003"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/secondLine003"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toEndOf="@id/icon003"
                android:gravity="center_vertical"
                android:text="6758.44USD (24hr: -6.49)"
                android:textSize="16sp"
                app:layout_rowSpan="1"
                app:layout_columnSpan="2"
                />

            <TextView
                android:id="@+id/secondLine003"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/icon003"
                android:maxLines="1"
                android:singleLine="true"
                android:text="1BTC (24hr: 0), 12.72721280649ETH (24hr:  -0.36)"
                android:textSize="12sp"
                app:layout_rowSpan="1"
                app:layout_columnSpan="2"
                />


</LinearLayout>